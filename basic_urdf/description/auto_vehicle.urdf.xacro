<?xml version="1.0"?>
<robot name="auto_vehicle" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="auto_vehicle.gazebo"/>

    
    <!-- Common Properties -->
    

    <xacro:property name="wheel_radius" value="0.16"/>
    <xacro:property name="wheel_length" value="0.08"/>
    <xacro:property name="base_size" value="0.8 1.2 0.4"/>
    <xacro:property name="lidar_radius" value="0.1"/>
    <xacro:property name="lidar_length" value="0.04"/>

    
    <!-- Materials (same) -->
    

    <material name="grey"><color rgba="0.6 0.6 0.6 1.0"/></material>
    <material name="green"><color rgba="0.0 0.6 0.0 1.0"/></material>
    <material name="black"><color rgba="0.0 0.0 0.0 1.0"/></material>
    <material name="white"><color rgba="1.0 1.0 1.0 1.0"/></material>


    <!-- Macro -->
    
    
    <!--  Macro for Wheel Geometry  -->
    <xacro:macro name="wheel" params="name">
        <link name="${name}">
            <visual>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 1.57 0"/>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 1.57 0"/>
            </collision>
            <inertial>
                <mass value="0.5"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="0.0016" ixy="0.0" ixz="0.0" iyy="0.000867" iyz="0.0" izz="0.000867"/>
            </inertial>
        </link>
    </xacro:macro>

    <!-- Macro for fixed joints -->
    <xacro:macro name="fixed_joint" params="name parent child xyz rpy">
        <joint name="${name}" type="fixed">
            <parent link="${parent}"/>
            <child link="${child}"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>
    </xacro:macro>

    <!-- Macro for wheel joints -->
    <xacro:macro name="wheel_joint" params="name parent child xyz">
        <joint name="${name}" type="continuous">
            <parent link="${parent}"/>
            <child link="${child}"/>
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <axis xyz="1 0 0"/>
        </joint>
    </xacro:macro>

    
    <!-- Links -->
    

    <link name="base_footprint">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="${base_size}"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <box size="${base_size}"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <inertia ixx="0.2167" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.2667"/>
        </inertial>
    </link>

    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="${lidar_radius}" length="${lidar_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${lidar_radius}" length="${lidar_length}"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.00025"/>
        </inertial>
    </link>

    <!-- Wheels -->
    <xacro:wheel name="left_back_wheel"/>
    <xacro:wheel name="right_back_wheel"/>
    <xacro:wheel name="left_front_wheel"/>
    <xacro:wheel name="right_front_wheel"/>


    <!-- Joints -->


    <xacro:fixed_joint name="base_joint"
                       parent="base_footprint"
                       child="base_link"
                       xyz="0 0 0.16"
                       rpy="0 0 0"/>

    <xacro:fixed_joint name="base_lidar_joint"
                       parent="base_link"
                       child="lidar"
                       xyz="0 0.6 0.2"
                       rpy="0 0 0"/>

    <xacro:wheel_joint name="base_left_back_joint"
                       parent="base_link"
                       child="left_back_wheel"
                       xyz="-0.44 -0.3 0"/>

    <xacro:wheel_joint name="base_left_front_joint"
                       parent="base_link"
                       child="left_front_wheel"
                       xyz="0.44 -0.3 0"/>

    <xacro:wheel_joint name="base_right_back_joint"
                       parent="base_link"
                       child="right_back_wheel"
                       xyz="-0.44 0.3 0"/>

    <xacro:wheel_joint name="base_right_front_joint"
                       parent="base_link"
                       child="right_front_wheel"
                       xyz="0.44 0.3 0"/>

</robot>
